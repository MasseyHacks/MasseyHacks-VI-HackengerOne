<body>
    <div class="container">
        <h1>Question 4: Space Sequences</h1>
        <h4>Cruising in a galaxy far, far away.</h4>
        <img class="img-fluid" src="images/image4.png">

        <p>Hint: Fibonnaci</p>

        <input type="text" name="solution" id="userInp">
        <button type="button" class="generic-button" id="submit">Submit</button>
    </div>
</body>

<script>
    $("#submit").click(() => {
        $.ajax({
            type: "POST",
            url: "api" + window.location.pathname + '/' + btoa($("#userInp").val()),
            success: function (o) {
                if (o !== "wrong") {
                    swal("Good job!").then(() => {
                        window.location.href = o
                    })
                } else {
                    swal("Try again!")
                }
            }
        })
    })
    $("#userInp").keypress(function (e) {
        if (e.which == 13) {
            $("#submit").focus().click()
        }
    })
</script>
